{
  "name": "copperx-tg-bot",
  "version": "1.0.0",
  "description": "A Telegram bot that enables users to deposit, withdraw and transfer USDC directly using Copperx Payout\"",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-templates": "copyfiles -u 3 ./src/views/templates/** ./dist/views/templates/",
    "build": "tsc && npm run copy-templates",
    "start": "pm2 restart ./dist/index.js",
    "dev": "npm run build && node ./dist/index.js",
    "prisma": "prisma migrate dev && prisma generate"
  },
  "author": "cjScrypt",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.0.1",
	"copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "prisma": "^6.0.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "schema": "src/database/prisma/"
  }
}
